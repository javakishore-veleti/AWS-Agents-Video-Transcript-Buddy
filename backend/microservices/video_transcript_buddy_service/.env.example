# =============================================================================
# Video Transcript Buddy Service - Environment Variables
# =============================================================================
# Copy this file to .env and configure
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# App Settings
# -----------------------------------------------------------------------------
APP_NAME=Video Transcript Buddy Service
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# AWS Settings (uses AWS CLI profile - no keys stored here!)
# -----------------------------------------------------------------------------
# Profile name from ~/.aws/credentials
# Setup: npm run aws:profile:setup:mac (or :win)
# Verify: npm run aws:profile:verify:mac (or :win)
AWS_PROFILE=video-transcript-buddy
AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# S3 Settings
# -----------------------------------------------------------------------------
S3_BUCKET_NAME=video-transcript-buddy-bucket
S3_TRANSCRIPT_FOLDER=transcripts
S3_ARCHIVE_FOLDER=archive

# -----------------------------------------------------------------------------
# OpenAI Settings (uses system environment variable - no keys stored here!)
# -----------------------------------------------------------------------------
# Setup: npm run openai:setup:mac (or :win)
# Verify: npm run openai:verify:mac (or :win)
# The OPENAI_API_KEY should be set in your system environment, not here!
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# -----------------------------------------------------------------------------
# Vector Store Settings
# -----------------------------------------------------------------------------
VECTOR_STORE_TYPE=local
VECTOR_STORE_PATH=./data/vectors
VECTOR_CHUNK_SIZE=1000
VECTOR_CHUNK_OVERLAP=200

# -----------------------------------------------------------------------------
# AgentCore Settings (for future AWS Bedrock integration)
# -----------------------------------------------------------------------------
AGENTCORE_ENABLED=false
AGENTCORE_ENDPOINT_URL=

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:4200,http://127.0.0.1:4200